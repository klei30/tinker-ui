# Tinker Platform Backend Configuration
# Copy this file to .env and fill in your actual values

# Tinker API Key (required for training)
# Get your API key from the Tinker platform
TINKER_API_KEY=your_tinker_api_key_here

# Database Configuration
# Default: SQLite database in the backend directory
DATABASE_URL=sqlite:///./tinker_platform.db

# Authentication
# Set to true to allow anonymous access (development only)
ALLOW_ANON=true

# Encryption Key for HuggingFace Token Storage
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# IMPORTANT: Keep this secret and never commit it to version control
ENCRYPTION_KEY=your_encryption_key_here

# Optional: Backend Host and Port
# HOST=127.0.0.1
# PORT=8000

# Optional: CORS Settings
# CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
